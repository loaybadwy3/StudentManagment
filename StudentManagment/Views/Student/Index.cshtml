@model IEnumerable<StudentManagment.Models.Student>

<div class="container p-3">
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-primary">Students List</h2>
        </div>
        <div class="col-6 text-right">
            <a asp-controller="Student" asp-action="Add" class="btn btn-primary">Add Student</a>
        </div>
    </div>
    <br />

    @if(Model.Count() > 0)
    {
        <table class="table table-bordered table-striped" style="width:100%">
            <thead>
                <tr>
                    <th>
                        Student Name
                    </th>
                    <th>
                        Student Number
                    </th>
                    <th>
                        Student Courses
                    </th>
                    <th>
                        Edit
                    </th>
                </tr>
            </thead>
            <tbody>
                @foreach(var student in Model)
                {
                    <tr>
                        <td width="25%">@student.StudentName</td>
                        <td width="25%">@student.StudentNumber</td>
                        <td width="25%">@student.StudentCourses</td>
                        <td width="25%">
                            <div class="row justify-content-center">
                                <a asp-controller="Student" asp-action="Update" asp-route-id="@student.Id" class="btn btn-primary m-1">Update</a>
                                <a asp-controller="Student" asp-action="Details" asp-route-id="@student.Id" class="btn btn-success m-1">Details</a>
                                <a asp-controller="Student" asp-action="DeleteGet" asp-route-id="@student.Id" class="btn btn-danger m-1 ">Delete</a>
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table> 
    }
    else
    {
        <p>No Students Added yet</p>
    }

</div>



