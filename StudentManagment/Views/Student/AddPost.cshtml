@model StudentManagment.ViewModels.SaveStudentCourses

<form method="post" asp-action="AddPost">
  <div class="form-group">
    <label asp-for="StudentName"></label>
    <input asp-for="StudentName" class="form-control">
    <span asp-validation-for="StudentName" class="text-danger"></span>
  </div>
  <div class="form-group">
    <label asp-for="StudentNumber"></label>
    <input asp-for="StudentNumber" class="form-control">
    <span asp-validation-for="StudentNumber" class="text-danger"></span>
  </div>
    @foreach ( var course in Model.Courses)
    {
        <div class="form-check">
            <input name="Courses" class="form-check-input" type="checkbox" value="@Model.Course.Id" id="@Model.Course.Id">
            <label class="form-check-label" for="@Model.Course.Id">
                @Model.Course.CourseName
            </label>
        </div>
    }
    <input type="submit" class="btn btn-primary">
  <a asp-controller="Student" asp-action="Index" class="btn btn-danger">Back</a>
</form>
