@model StudentManagment.ViewModels.StudentCourseViewModel

<form method="post" asp-action="Add">
  <div class="form-group">
    <label asp-for="StudentName"></label>
    <input asp-for="StudentName" class="form-control">
    <span asp-validation-for="StudentName" class="text-danger"></span>
  </div>
  <div class="form-group">
    <label asp-for="StudentNumber"></label>
    <input asp-for="StudentNumber" class="form-control">
    <span asp-validation-for="StudentNumber" class="text-danger"></span>
  </div>
    <select class="form-select" asp-for="Courses" asp-items="@(new SelectList(Model.Courses,"Id","CourseName"))"></select>

    <input type="submit" class="btn btn-primary">
  <a asp-controller="Student" asp-action="Index" class="btn btn-danger">Back</a>
</form>
