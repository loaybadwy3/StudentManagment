@model IEnumerable<StudentManagment.Models.Course>

<div class="container p-3">
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-primary">Courses List</h2>
        </div>
        <div class="col-6 text-right">
            <a asp-controller="Course" asp-action="Add" class="btn btn-primary">Add Course</a>
        </div>
    </div>
    <br/>

    @if(Model.Count() > 0)
    {
        <table class="table table-bordered table-striped" style="width:100%">
            <thead>
                <tr>
                    <th>
                        Course Name
                    </th>
                    <th>
                        Course Number
                    </th>
                    <th>
                        Edit
                    </th>
                </tr>
            </thead>
            <tbody>
                @foreach(var course in Model)
                {
                    <tr>
                        <td width="25%">@course.CourseName</td>
                        <td width="25%">@course.CourseNumber</td>d>
                        <td width="25%">
                            <div class="row justify-content-center">
                                <a asp-controller="Course" asp-action="Update" asp-route-id="@course.Id" class="btn btn-primary col-5 m-1">Update</a>
                                <a asp-controller="Course" asp-action="DeleteGet" asp-route-id="@course.Id" class="btn btn-danger col-5 m-1">Delete</a>
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table> 
    }
    else
    {
        <p>No Courses Added yet</p>
    }

</div>



