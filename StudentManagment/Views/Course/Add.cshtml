@model StudentManagment.Models.Course

<form method="post" asp-action="Add">
  <div class="form-group">
    <label asp-for="CourseName"></label>
    <input asp-for="CourseName" class="form-control">
    <span asp-validation-for="CourseName" class="text-danger"></span>
  </div>
  <div class="form-group">
    <label asp-for="CourseNumber"></label>
    <input asp-for="CourseNumber" class="form-control">
    <span asp-validation-for="CourseNumber" class="text-danger"></span>
  </div>
  <input type="submit" class="btn btn-primary">
  <a asp-controller="course" asp-action="Index" class="btn btn-danger">Back</a>
</form>
