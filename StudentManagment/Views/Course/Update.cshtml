@model StudentManagment.Models.Course

<form method="post" asp-action="Update">
    <input asp-for="Id" hidden />
  <div class="form-group">
    <label asp-for="CourseName"></label>
    <input asp-for="CourseName" class="form-control">
    <span asp-validation-for="CourseName" class="text-danger"></span>
  </div>
  <div class="form-group">
    <label asp-for="CourseNumber"></label>
    <input asp-for="CourseNumber" class="form-control">
    <span asp-validation-for="CourseNumber" class="text-danger"></span>
  </div>
  <div class="row justify-content-center">
    <button type="submit" class="btn btn-danger col-5 m-1">Confirm</button>
    <a asp-controller="Student" asp-action="Index" class="btn btn-primary col-5 m-1">Back</a>
</div>
</form>
